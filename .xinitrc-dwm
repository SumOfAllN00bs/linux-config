#!/bin/sh
[ -f ~/.Xresources ] && xrdb ~/.Xresources
setxkbmap us -variant dvp -option ctrl:swap_lalt_lctl_lwin -option ctrl:nocaps
xmodmap -e 'keycode 135 = Super_R' &
xset r rate 300 50 &
while xsetroot -name "`pulsemixer --get-volume | awk '{print $1}'`% || `date +\"%I:%M %a %d/%m/%y\"` || `batstat`"
do
   sleep 5
done &
exec dwm
